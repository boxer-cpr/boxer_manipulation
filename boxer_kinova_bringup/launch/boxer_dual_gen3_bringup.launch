<?xml version="1.0"?>
<launch>
    <arg name="cyclic_data_publish_rate" default="100"/> <!--Hz-->
    <arg name="use_hard_limits" default="false"/>

    <!-- LEFT ARM -->
    <arg name="left_robot_name" default="left_arm"/>
    <arg name="left_prefix" default="$(arg left_robot_name)_"/>
    <arg name="left_arm" default="gen3"/>
    <arg name="left_dof" default="7"/>
    <arg name="left_vision" default="true"/>

    <!-- Gripper configuration -->
    <arg name="left_gripper" default=""/>

    <!-- Kortex API options -->
    <arg name="left_ip_address" default="192.168.131.40"/>
    <arg name="left_username" default="admin"/>
    <arg name="left_password" default="admin"/>
    <arg name="left_cyclic_data_publish_rate" default="$(arg cyclic_data_publish_rate)"/> <!--Hz-->
    <arg name="left_api_rpc_timeout_ms" default="2000"/> <!--milliseconds-->
    <arg name="left_api_session_inactivity_timeout_ms" default="35000"/> <!--milliseconds-->
    <arg name="left_api_connection_inactivity_timeout_ms" default="20000"/> <!--milliseconds-->

    <!-- Action server params -->
    <arg name="left_default_goal_time_tolerance" default="0.5"/> <!--seconds-->
    <arg name="left_default_goal_tolerance" default="0.005"/> <!--radians-->

    <!-- RIGHT ARM -->
    <arg name="right_robot_name" default="right_arm"/>
    <arg name="right_prefix" default="$(arg right_robot_name)_"/>
    <arg name="right_arm" default="gen3"/>
    <arg name="right_dof" default="7"/>
    <arg name="right_vision" default="true"/>

    <!-- Gripper configuration -->
    <arg name="right_gripper" default=""/>

    <!-- Kortex API options -->
    <arg name="right_ip_address" default="192.168.131.41"/>
    <arg name="right_username" default="admin"/>
    <arg name="right_password" default="admin"/>
    <arg name="right_cyclic_data_publish_rate" default="$(arg cyclic_data_publish_rate)"/> <!--Hz-->
    <arg name="right_api_rpc_timeout_ms" default="2000"/> <!--milliseconds-->
    <arg name="right_api_session_inactivity_timeout_ms" default="35000"/> <!--milliseconds-->
    <arg name="right_api_connection_inactivity_timeout_ms" default="20000"/> <!--milliseconds-->

    <!-- Action server params -->
    <arg name="right_default_goal_time_tolerance" default="0.5"/> <!--seconds-->
    <arg name="right_default_goal_tolerance" default="0.005"/> <!--radians-->

    <include file="$(find boxer_kinova_bringup)/launch/boxer_gen3_bringup.launch">
      <arg name="robot_name" default="$(arg left_robot_name)"/>
      <arg name="prefix" default="$(arg left_prefix)"/>
      <arg name="arm" default="$(arg left_arm)"/>
      <arg name="dof" default="$(arg left_dof)"/>
      <arg name="vision" default="true"/>
      <arg name="gripper" default="$(arg left_gripper)"/>
      <arg name="use_hard_limits" default="false"/>
      <arg name="ip_address" default="$(arg left_ip_address)"/>
      <arg name="username" default="$(arg left_username)"/>
      <arg name="password" default="$(arg left_password)"/>
      <arg name="cyclic_data_publish_rate" default="$(arg left_cyclic_data_publish_rate)"/> <!--Hz-->
      <arg name="api_rpc_timeout_ms" default="$(arg left_api_rpc_timeout_ms)"/> <!--milliseconds-->
      <arg name="api_session_inactivity_timeout_ms" default="$(arg left_api_session_inactivity_timeout_ms)"/> <!--milliseconds-->
      <arg name="api_connection_inactivity_timeout_ms" default="$(arg left_api_connection_inactivity_timeout_ms)"/> <!--milliseconds-->
      <arg name="default_goal_time_tolerance" default="$(arg left_default_goal_time_tolerance)"/> <!--seconds-->
      <arg name="default_goal_tolerance" default="$(arg left_default_goal_tolerance)"/> <!--radians-->
    </include>

    <include file="$(find boxer_kinova_bringup)/launch/boxer_gen3_bringup.launch">
      <arg name="robot_name" default="$(arg right_robot_name)"/>
      <arg name="prefix" default="$(arg right_prefix)"/>
      <arg name="arm" default="$(arg right_arm)"/>
      <arg name="dof" default="$(arg right_dof)"/>
      <arg name="vision" default="true"/>
      <arg name="gripper" default="$(arg right_gripper)"/>
      <arg name="use_hard_limits" default="false"/>
      <arg name="ip_address" default="$(arg right_ip_address)"/>
      <arg name="username" default="$(arg right_username)"/>
      <arg name="password" default="$(arg right_password)"/>
      <arg name="cyclic_data_publish_rate" default="$(arg right_cyclic_data_publish_rate)"/> <!--Hz-->
      <arg name="api_rpc_timeout_ms" default="$(arg right_api_rpc_timeout_ms)"/> <!--milliseconds-->
      <arg name="api_session_inactivity_timeout_ms" default="$(arg right_api_session_inactivity_timeout_ms)"/> <!--milliseconds-->
      <arg name="api_connection_inactivity_timeout_ms" default="$(arg right_api_connection_inactivity_timeout_ms)"/> <!--milliseconds-->
      <arg name="default_goal_time_tolerance" default="$(arg right_default_goal_time_tolerance)"/> <!--seconds-->
      <arg name="default_goal_tolerance" default="$(arg right_default_goal_tolerance)"/> <!--radians-->
    </include>
</launch>
